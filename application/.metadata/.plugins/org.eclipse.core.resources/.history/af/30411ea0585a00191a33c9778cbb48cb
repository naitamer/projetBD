	     p.setLayout(null); 
	     f.add(p);
	     JButton Jb =new JButton("Ajouter un achat");      //Créer un bouton.
	     Jb.setBounds(300, 40, 200, 50);                   //Définir la taille du bouton.
	     Jb.setFont(new Font("Serif", Font.BOLD, 20));    //Définir le font.
	     p.add(Jb);       
	     
	  
	     JPanel pDetails = new JPanel (); 
