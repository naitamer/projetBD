import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.LayoutManager;

import javax.swing.BoxLayout;
import javax.swing.JFrame;
import javax.swing.JPanel;


	public class InterfaceGraphique2 {
		   
	    InterfaceGraphique2(){  
		 JFrame f= new JFrame("Acheteur");//Créer un objet graphique.
	
		 f.setTitle("Achèteur"); 
		 f.setSize(800,700);          //Définir la taille de l'objet graphique.
		 //f.setLayout(null); 
	     f.setLocationRelativeTo(null);
	     f.setResizable(false);
	     f.setVisible(true);        
	     JPanel p = new JPanel ();    //Définir un component JPaneln
	     p.setLayout(null); 
	     p.setBackground(Color.BLUE);
	     f.add(p);
	     
	  
	     JPanel p1 = new JPanel ();  
	     p1.setLocation ( 20, 10 ) ;
	     p1.setSize (200, 400) ; 
	     p1.setBackground(Color.RED);
	     p.add(p1);
	     
	   
         }

		
    }
